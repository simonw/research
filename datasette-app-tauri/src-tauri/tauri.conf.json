{
  "$schema": "https://tauri.app/schema.json",
  "productName": "Datasette",
  "version": "0.1.0",
  "identifier": "io.datasette.app",
  "build": {
    "frontendDist": "../src",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "",
    "beforeBuildCommand": ""
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Datasette",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "url": "loading.html"
      }
    ],
    "security": {
      "csp": "default-src 'self' 'unsafe-inline' http://localhost:* http://127.0.0.1:*; connect-src 'self' http://localhost:* http://127.0.0.1:* ws://localhost:* ws://127.0.0.1:*"
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
